{
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require": {
    "doctrine/dbal": "^4.3",
    "doctrine/migrations": "^3.9",
    "php-di/php-di": "^7.1",
    "vlucas/phpdotenv": "^5.6",
    "dompdf/dompdf": "^3.1"
  },
  "scripts": {
    "migrate":       "vendor/bin/doctrine-migrations migrate --no-all-or-nothing --configuration=config/migrations.php --db-configuration=config/dbal.php",
    "migrations:generate": "vendor/bin/doctrine-migrations generate --configuration=config/migrations.php --db-configuration=config/dbal.php",
    "migrations:status":   "vendor/bin/doctrine-migrations status --configuration=config/migrations.php --db-configuration=config/dbal.php",
    "migrations:rollback": "vendor/bin/doctrine-migrations migrate prev --configuration=config/migrations.php --db-configuration=config/dbal.php"
  },
  "extra": {
    "doctrine": {
      "migrations": "doctrine-migrations.php"
    }
  }
}
